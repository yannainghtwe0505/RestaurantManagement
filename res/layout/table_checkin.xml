<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_bg_fff"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#039BE5"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="チェックイン情報"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E4E3E3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:gravity="center_vertical"
            android:textColor="#0C0B0B"
            android:id="@+id/textView2"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="テーブル"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:gravity="center_vertical"
            android:lines="1"
            android:ellipsize="end"
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="10dp">

        <TextView
            android:gravity="center_vertical"
            android:textColor="#0C0B0B"
            android:id="@+id/textView4"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="男性"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:gravity="center_vertical"
            android:text="0"
            android:id="@+id/man_count"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:textSize="15sp" />
        <TextView
            android:gravity="center_vertical"
            android:text="名"
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/btnManAdd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_icon"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/ic_add" />

        <ImageView
            android:id="@+id/btnManSub"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_icon"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/ic_sub" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:layout_marginTop="10dp"
        android:paddingRight="20dp">

        <TextView
            android:gravity="center_vertical"
            android:textColor="#0C0B0B"
            android:id="@+id/textView5"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="女性"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:gravity="center_vertical"
            android:text="0"
            android:id="@+id/woman_count"
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:textSize="15sp" />

        <TextView
            android:gravity="center_vertical"
            android:text="名"
            android:id="@+id/textView11"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/btnWomanAdd"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_icon"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/ic_add" />

        <ImageView
            android:id="@+id/btnWomanSub"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/btn_icon"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/ic_sub" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <TextView
            android:gravity="center_vertical"
            android:textColor="#0C0B0B"
            android:id="@+id/textView6"
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:text="予約"
            android:textSize="15sp"
            android:textStyle="bold" />

        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <RadioButton
                android:layout_weight="1"
                android:id="@+id/radioButtonYes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="有" />

            <RadioButton
                android:id="@+id/radioButtonNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:checked="true"
                android:text="無" />
        </RadioGroup>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#E4E3E3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/cancel"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F4F3F3"
            android:gravity="center"
            android:text="取消"
            android:textColor="#666666"
            android:textSize="15sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="#CFCFCF" />

        <TextView
            android:id="@+id/confirm"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#F4F3F3"
            android:gravity="center"
            android:text="確定"
            android:textColor="#666666"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:background="#12B13A"
    android:orientation="horizontal"
    android:id="@+id/menu_row">

    <LinearLayout
        android:paddingLeft="4dp"
        android:paddingRight="4dp"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:textSize="12dp"
            android:textColor="#ffffff"
            android:id="@+id/course_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1" />

        <TextView
            android:textColor="#ffffff"
            android:id="@+id/course_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:lines="2" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--
        <TextView
            android:layout_weight="1"
            android:textColor="#ffffff"
            android:gravity="fill_vertical"
            android:id="@+id/price"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:lines="1" />

        <TextView
            android:layout_weight="2"
            android:textColor="#ffffff"
            android:gravity="fill_vertical"
            android:id="@+id/inventory"
            android:textSize="12dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="end"
            android:lines="1" />
            -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btnAdd"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_icon"
                android:layout_marginRight="5dp"
                app:srcCompat="@drawable/ic_add" />

            <TextView
                android:id="@+id/menu_count"
                android:gravity="center"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="0"
                android:textColor="#FFFFFF"
                android:background="@drawable/menu_count"
                android:textStyle="bold"></TextView>

            <ImageView
                android:id="@+id/btnSub"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/btn_icon"
                android:layout_marginLeft="5dp"
                app:srcCompat="@drawable/ic_sub" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:textColor="#FF0000"
            android:id="@+id/soldOut"
            android:padding="10dp"
            android:textSize="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:lines="1"
            android:text="完売"
            tools:visibility="gone" />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FDFCFA"
    android:orientation="vertical">

    <!-- body -->
    <LinearLayout
        android:padding="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ご飯オプション -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="ご飯の量をお選びください。"
                android:textColor="#FFFFFF"
                android:background="#CA0347"
                android:autoSizeMinTextSize="10dp"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeTextType="uniform"
                android:textStyle="bold"></TextView>
        </LinearLayout>
        <LinearLayout
            android:background="#D2D6D8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/launch_option_btn_1"
                android:visibility="gone"
                android:textSize="22dp"
                android:layout_weight="1"
                android:foregroundGravity="right|top"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:backgroundTint="#EAEFF1"
                android:textColor="#292828" />

            <Button
                android:id="@+id/launch_option_btn_2"
                android:visibility="gone"
                android:textSize="22dp"
                android:layout_weight="1"
                android:foregroundGravity="right|top"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:backgroundTint="#EAEFF1"
                android:textColor="#292828" />

            <Button
                android:id="@+id/launch_option_btn_3"
                android:visibility="gone"
                android:textSize="22dp"
                android:layout_weight="1"
                android:foregroundGravity="right|top"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:backgroundTint="#EAEFF1"
                android:textColor="#292828" />
        </LinearLayout>

        <!-- カレーオプション -->
        <LinearLayout
            android:id="@+id/curry_option_text"
            android:visibility="gone"
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="下記よりお選びください。"
                android:textColor="#FFFFFF"
                android:background="#CA0347"
                android:autoSizeMinTextSize="10dp"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeTextType="uniform"
                android:textStyle="bold"></TextView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/curry_option_btn"
            android:visibility="gone"
            android:background="#D2D6D8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/curry_option_btn_1"
                android:visibility="gone"
                android:textSize="22dp"
                android:layout_weight="1"
                android:foregroundGravity="right|top"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:backgroundTint="#EAEFF1"
                android:textColor="#292828" />

            <Button
                android:id="@+id/curry_option_btn_2"
                android:visibility="gone"
                android:textSize="22dp"
                android:layout_weight="1"
                android:foregroundGravity="right|top"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:backgroundTint="#EAEFF1"
                android:textColor="#292828" />

            <Button
                android:id="@+id/curry_option_btn_3"
                android:visibility="gone"
                android:textSize="22dp"
                android:layout_weight="1"
                android:foregroundGravity="right|top"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:backgroundTint="#EAEFF1"
                android:textColor="#292828" />
        </LinearLayout>

        <!-- トッピングオプション -->
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:ellipsize="end"
                android:lines="1"
                android:text="トッピングはいかがでしょうか？"
                android:textColor="#FFFFFF"
                android:background="#CA0347"
                android:autoSizeMinTextSize="10dp"
                android:autoSizeMaxTextSize="30dp"
                android:autoSizeTextType="uniform"
                android:textStyle="bold"></TextView>
        </LinearLayout>
        <!-- トッピングオプション1 -->
        <LinearLayout
            android:background="#D2D6D8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/topping_1"
                android:foregroundGravity="right|top"
                android:background="@drawable/topping"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="4dp"
                android:padding="4dp"
                android:textColor="#292828"
                android:visibility="gone">
                <TextView
                    android:id="@+id/topping_1_name"
                    android:textColor="#292828"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:layout_height="0dp"></TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D2D6D8" />
                <TextView
                    android:id="@+id/topping_1_price"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:ellipsize="end"
                    android:lines="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/topping_2"
                android:foregroundGravity="right|top"
                android:background="@drawable/topping"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="4dp"
                android:padding="4dp"
                android:textColor="#292828"
                android:visibility="gone">
                <TextView
                    android:id="@+id/topping_2_name"
                    android:textColor="#292828"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:layout_height="0dp"></TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D2D6D8" />
                <TextView
                    android:id="@+id/topping_2_price"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:ellipsize="end"
                    android:lines="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"></TextView>
            </LinearLayout>
        </LinearLayout>
        <!-- トッピングオプション2 -->
        <LinearLayout
            android:background="#D2D6D8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/topping_3"
                android:foregroundGravity="right|top"
                android:background="@drawable/topping"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="4dp"
                android:padding="4dp"
                android:textColor="#292828"
                android:visibility="gone">
                <TextView
                    android:id="@+id/topping_3_name"
                    android:textColor="#292828"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:layout_height="0dp"></TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D2D6D8" />
                <TextView
                    android:id="@+id/topping_3_price"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:ellipsize="end"
                    android:lines="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"></TextView>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/topping_4"
                android:foregroundGravity="right|top"
                android:background="@drawable/topping"
                android:orientation="vertical"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_margin="4dp"
                android:padding="4dp"
                android:textColor="#292828"
                android:visibility="gone">
                <TextView
                    android:id="@+id/topping_4_name"
                    android:textColor="#292828"
                    android:layout_weight="2"
                    android:layout_width="match_parent"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:textSize="20dp"
                    android:layout_height="0dp"></TextView>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#D2D6D8" />
                <TextView
                    android:id="@+id/topping_4_price"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:ellipsize="end"
                    android:lines="1"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"></TextView>
            </LinearLayout>
    </LinearLayout>

        <!-- btn -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:orientation="horizontal">
            <Button
                android:layout_weight="1"
                android:textSize="22dp"
                android:id="@+id/btnClose"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:text="閉じる"
                android:layout_marginRight="10dp"
                android:backgroundTint="#D2D6D8"
                android:textColor="#292828" />

            <Button
                android:layout_weight="1"
                android:textSize="22dp"
                android:id="@+id/btnConfirm"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:backgroundTint="#86D52B"
                android:text="確定"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
